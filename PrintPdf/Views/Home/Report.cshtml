                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>JOB NO.</th>
                                <th>Normal</th>
                                <th>OT 1.5</th>
                                <th>OT 3.0</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for(int i = 0; i < 10; i++)
                            {
                                <tr>
