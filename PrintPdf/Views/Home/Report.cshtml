                            <th>Break</th>
                            <th>Normal</th>
                            <th>OT 1.5</th>
                            <th>OT 3.0</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 31; i++)
                        {
                            <tr>
                                <td>
                                    @Convert.ToDateTime("2022-05-" + (i + 1)).ToString("dd MMM yy")
                                </td>
                                <td>
                                    @Convert.ToDateTime("2022-05-" + (i + 1)).DayOfWeek
                                </td>
                                <td>
                                    TEST JOB NAME
                                </td>
                                <td>
                                    HQ
                                </td>
                                <td>
                                    Support
                                </td>
                                <td>
                                    08:30
                                </td>
                                <td>
